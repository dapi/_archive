<h1>Listing days</h1>

<table>
  <tr>
<th>Date</th>
<th>Events</th>
  </tr>

<% @days.each do |day| %>
  <tr>
    <td><%=h day.date %></td>
    <td>--</td>

    <td><%= link_to 'Show', day %></td>
    <td><%= link_to 'Edit', edit_day_path(day) %></td>
    <td><%= link_to 'Destroy', day, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New day', new_day_path %>
