= div_for(company, :class => 'company_item') do 
  %h3= link_to company.excerpts.name, company
  .address= company.excerpts.address
  .website= h company.site
  .work_time= h company.working_time
  .phones= h_phones company.phones
  .group= link_to company.company_group.name, company.company_group
  = link_to 'Edit', "/admin/companies/edit/#{company.id}"
