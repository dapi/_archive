  %body
    #loader{:style => "display: none;"}
      %img{:src => "/images/ajax-loader3.gif", :width => 16, :height => 16, :title => "Загрузка..." }
    .navigation1
      %ul
        = render :partial => "layouts/admin/nav"
    - begin
      - s = render :partial => "subnav"
      .navigation2
        %ul= s
    - rescue ActionView::MissingTemplate
      .empty

    .content= yield

