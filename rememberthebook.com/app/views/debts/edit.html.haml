%h2 Изменить долг

= semantic_form_for @debt do |form|
  = form.inputs do
    = form.input :thing,  :input_html => {:tabindex=>0, :class=>'autofocus'}, :label => 'Взял'
  = form.inputs :for => :creditor do |creditor|
    = creditor.input :email, :label => 'email одалживателя', :disabled => true
    = creditor.input :name, :label => 'Его имя'
  = form.inputs do
    = form.input :till, :label => "Должен вернуть"
    = form.input :comment, :label => "Комментарий"
  - form.buttons do
    = form.commit_button :label=>'Сохранить изменения'

